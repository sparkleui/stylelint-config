{
  "name": "@sparkleui/stylelint-config",
  "version": "1.0.2",
  "description": "A shareable Stylelint config used by Sparkle UI.",
  "keywords": [
    "sparkleui",
    "stylelint",
    "stylelint-config",
    "config",
    "lint"
  ],
  "bugs": {
    "url": "https://github.com/danieledeluca/stylelint-config/issues"
  },
